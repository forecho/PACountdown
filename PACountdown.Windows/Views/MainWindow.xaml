<Window x:Class="PACountdown.Windows.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PACountdown.Windows.ViewModels"
        Title="PACountdown - Windows" 
        Height="600" 
        Width="480"
        MinHeight="500"
        MinWidth="400"
        Background="{StaticResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel Spacing="0">
            
            <!-- Current Time Display -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentTime}" 
                               Style="{StaticResource ClockTextStyle}"/>
                </StackPanel>
            </Border>

            <!-- Countdown Timer -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="5-Min Interval Countdown" 
                               Style="{StaticResource SubHeaderTextStyle}"
                               Margin="0,0,0,12"/>
                    
                    <TextBlock Text="{Binding TimeRemainingDisplay}" 
                               Style="{StaticResource CountdownTextStyle}"/>
                    
                    <TextBlock Text="{Binding MarketStatusMessage}" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTimerRunning}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsTimerRunning}" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Controls -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    
                    <!-- Market Mode Switch -->
                    <Button Command="{Binding SwitchMarketModeCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🌍" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding MarketMode}" Value="US">
                                                <Setter Property="Text" Value="Switch to Global"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding MarketMode}" Value="Global">
                                                <Setter Property="Text" Value="Switch to US"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button>

                    <!-- Notification Controls -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                                Command="{Binding ToggleNotificationsCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16" Margin="0,0,8,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AreNotificationsEnabled}" Value="True">
                                                    <Setter Property="Text" Value="🔊"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding AreNotificationsEnabled}" Value="False">
                                                    <Setter Property="Text" Value="🔇"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AreNotificationsEnabled}" Value="True">
                                                    <Setter Property="Text" Value="Mute Notifications"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding AreNotificationsEnabled}" Value="False">
                                                    <Setter Property="Text" Value="Unmute Notifications"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                        
                        <Button Grid.Column="1"
                                Command="{Binding TestSoundCommand}"
                                Style="{StaticResource SecondaryButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔊" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Test Sound"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Notification Settings -->
                    <StackPanel>
                        <TextBlock Text="Notification Settings" 
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource PrimaryTextBrush}">
                                <Run Text="Pre-notification time: "/>
                                <Run Text="{Binding PreNotificationSeconds}"/>
                                <Run Text=" seconds"/>
                            </TextBlock>
                            
                            <Button Grid.Column="1" 
                                    Content="-"
                                    Width="30" Height="30"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="8,0,4,0"
                                    Click="DecreasePreNotification"/>
                            
                            <TextBlock Grid.Column="2"
                                       Text="{Binding PreNotificationSeconds}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Width="30"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       FontWeight="Bold"/>
                            
                            <Button Grid.Column="3"
                                    Content="+"
                                    Width="30" Height="30"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="4,0,0,0"
                                    Click="IncreasePreNotification"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>