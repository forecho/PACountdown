<Window x:Class="PACountdown.Windows.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:PACountdown.Windows.Properties"
        Title="{x:Static properties:Resources.AppTitle}" 
        Height="600" 
        Width="480"
        MinHeight="500"
        MinWidth="400"
        Background="#FF2D2D30"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            
            <!-- Current Time Display -->
            <Border Background="#FF3E3E42" CornerRadius="8" Padding="20" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentTime}" 
                               Foreground="#FFCCCCCC"
                               FontSize="32"
                               FontWeight="Light"
                               FontFamily="Consolas, Courier New"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Countdown Timer -->
            <Border Background="#FF3E3E42" CornerRadius="8" Padding="20" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="5-Min Interval Countdown" 
                               Foreground="#FF999999"
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    
                    <TextBlock Text="{Binding TimeRemainingDisplay}" 
                               Foreground="#FFCCCCCC"
                               FontSize="72"
                               FontWeight="Bold"
                               FontFamily="Consolas, Courier New"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="{Binding MarketStatusMessage}" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#FFF44747"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTimerRunning}" Value="True">
                                        <Setter Property="Foreground" Value="#FF4EC9B0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Controls -->
            <Border Background="#FF3E3E42" CornerRadius="8" Padding="20" Margin="0,10">
                <StackPanel>
                    
                    <!-- Market Mode Switch -->
                    <Button Command="{Binding SwitchMarketModeCommand}"
                            Background="Transparent"
                            Foreground="#FFCCCCCC"
                            BorderBrush="#FF999999"
                            BorderThickness="1"
                            Padding="16,8"
                            Margin="0,0,0,16"
                            Cursor="Hand"
                            Content="🌍 Switch Mode"/>

                    <!-- Notification Controls -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                                Command="{Binding ToggleNotificationsCommand}"
                                Background="#FF007ACC"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="16,8"
                                Margin="0,0,8,0"
                                Cursor="Hand">
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="🔇 Unmute Notifications"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AreNotificationsEnabled}" Value="True">
                                                <Setter Property="Text" Value="🔊 Mute Notifications"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>
                        
                        <Button Grid.Column="1"
                                Command="{Binding TestSoundCommand}"
                                Background="Transparent"
                                Foreground="#FFCCCCCC"
                                BorderBrush="#FF999999"
                                BorderThickness="1"
                                Padding="16,8"
                                Cursor="Hand"
                                Content="🔊 Test Sound"/>
                    </Grid>

                    <!-- Notification Settings -->
                    <StackPanel>
                        <TextBlock Text="Notification Settings" 
                                   Foreground="#FF999999"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="#FFCCCCCC">
                                <Run Text="Pre-notification time: "/>
                                <Run Text="{Binding PreNotificationSeconds}"/>
                                <Run Text=" seconds"/>
                            </TextBlock>
                            
                            <Button Grid.Column="1" 
                                    Content="-"
                                    Width="30" Height="30"
                                    Background="Transparent"
                                    Foreground="#FFCCCCCC"
                                    BorderBrush="#FF999999"
                                    BorderThickness="1"
                                    Margin="8,0,4,0"
                                    Cursor="Hand"
                                    Click="DecreasePreNotification"/>
                            
                            <TextBlock Grid.Column="2"
                                       Text="{Binding PreNotificationSeconds}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Width="30"
                                       Foreground="#FFCCCCCC"
                                       FontWeight="Bold"/>
                            
                            <Button Grid.Column="3"
                                    Content="+"
                                    Width="30" Height="30"
                                    Background="Transparent"
                                    Foreground="#FFCCCCCC"
                                    BorderBrush="#FF999999"
                                    BorderThickness="1"
                                    Margin="4,0,0,0"
                                    Cursor="Hand"
                                    Click="IncreasePreNotification"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>